<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>

  <div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form action="/responder" method="POST">
      <h3>Responda</h3>
      <br>
      <textarea placeholder="Digite sua resposta" name="corpo" class="form-control" id="" cols="30" rows="10"></textarea>
      <input type="hidden" value="<%= pergunta.id %>" name="pergunta">
      <button type="submit" class="btn btn-primary">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta =>{ %>
      <div class="card">
        <div class="card-body">
          <p><%= resposta.corpo %></p>
        </div>
      </div>

    <% }) %>

  </div>

  
</body>
<%- include('partials/footer.ejs') %>